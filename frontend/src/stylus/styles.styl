/*==========Sidebar menu==========*/
.mobile-menu-icon
	position fixed
	top 16px
	left 14px
	z-index 5
	
.nav-icon
	width 28px
	height 20px
	position relative
	transform rotate(0deg)
	transition 0.5s ease-in-out
	cursor pointer
.nav-icon span
	display block
	position absolute
	height 4px
	width 50%
	opacity 1
	background-color $warning
	transform rotate(0deg)
	transition 0.25s ease-in-out
.nav-icon span:nth-child(even)
	left 50%
	border-radius 0 4px 4px 0

.nav-icon span:nth-child(odd)
	left 0px
	border-radius 4px 0px 0px 4px

.nav-icon span:nth-child(1),.nav-icon span:nth-child(1)
	top 0px
.nav-icon span:nth-child(3),.nav-icon span:nth-child(4)
	top 8px
.nav-icon span:nth-child(5),.nav-icon span:nth-child(6)
	top 16px

.nav-icon.open span:nth-child(1), .nav-icon.open span:nth-child(6)
	transform rotate(45deg)
.nav-icon.open span:nth-child(2), .nav-icon.open span:nth-child(5)
	transform rotate(-45deg)

.nav-icon.open span:nth-child(1)
	left 0px
	top 4px
.nav-icon.open span:nth-child(2)
	left calc(50% - 7px)
	top 4px
.nav-icon.open span:nth-child(3)
	left -50%
	opacity 0
.nav-icon.open span:nth-child(4)
	left 100%
	opacity 0
.nav-icon.open span:nth-child(5)
	left 0px
	top 12px
.nav-icon.open span:nth-child(6)
	left calc(50% - 7px)
	top 12px
	
.side-bar
	opacity 1
	width 150px	
	height 100vh
	position fixed
	left 0
	overflow auto
	z-index 4
	transition all .3s ease-in-out
	
.sidebar-menu
	position relative
	font-size 0.9rem

.sidebar-menu ul
	margin 0
	list-style-type none
	padding 0
	color white
.sidebar-menu li
	position relative
	padding 1rem 0.5rem 0rem 1rem
	transition opacity 340ms ease
	transition transform 340ms ease

.onDrugHover
	height 24px
	width 80%
	z-index -1
	position absolute
	background-color $warning
	border-radius 4px
	
.onDrugHoverSub
	height 90%
	width 80%
	z-index -1
	top 50%
	left 50%
	transform translate(-50%,-50%)
	position absolute
	background-color $warning
	border-radius 4px
		
.sidebar-menu li:nth-of-type(1)
	transition-delay 40ms	
.sidebar-menu li:nth-of-type(2)
	transition-delay 80ms
.sidebar-menu li:nth-of-type(3)
	transition-delay 120ms
.sidebar-menu li:nth-of-type(4)
	transition-delay 160ms	

.sidebar-menu li a
	padding-left 4px
	color white
	text-decoration none
	opacity 0.8
	display inline-block
	transition all 150ms ease
	transform translateY(-0.5rem)

.sidebar-menu li.isActive  a
	opacity 1
	transform translate(4px, -.5rem)
.sidebar-menu li.isActive:before
	transform translateX(0px)
	transition all 150ms ease	
.sidebar-menu li.isActive:hover a
	transform translate(4px, -.5rem)
	opacity 1

.sidebar-menu li:hover a
	opacity 1
	transform translate(11px, -.5rem)	
.sidebar-menu li:hover:before
	transform translateX(0px)
	transition all 150ms ease

ul.inner-list li
	position relative
	padding 0.1rem 0.2rem 0.1rem 1rem

ul.inner-list li a 
	transform translateY(.1rem)
	
.sidebar-menu li:hover ul.inner-list li a 
	transform translate(4px, .1rem)

.sidebar-menu li ul.inner-list li:hover a
	transform translate(8px, .1rem)	

.sidebar-menu li.isActive ul.inner-list li a 
	opacity 0.8
	transform translateY(.1rem)

.sidebar-menu li ul.inner-list li a 
	opacity 0.8
	transform translateY(.1rem)	

.sidebar-menu li ul.inner-list li:hover a 
	opacity 1
	transform translateY(.1rem)	
	
.sidebar-menu li.isActive ul.inner-list li:hover a
	transform translate(4px, .1rem)
	opacity 1
	
.sidebar-menu li.isActive ul.inner-list li.isActive a 
	opacity 1
	transform translate(4px, 0rem)
	
.sidebar-menu li.isActive ul.inner-list li.isActive:hover a
	transform translate(4px, 0rem)
	opacity 1

ul.inner-list li.isActive:before
	transform translate(4px, 0rem)
	
