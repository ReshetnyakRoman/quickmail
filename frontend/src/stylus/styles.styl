/*==========My Colors==========*/		
/*icon animation*/
.my-icon
	position relative
	cursor pointer
.avatar-text
	color $primary
	background-color white
	
.my-icon::before
	position absolute
	display block
	left 0.9rem
	top 0.9rem
	content ' '
	width 0px
	height 0px
	background-color rgba(0,0,0, 0.1)
	transition 0.2s ease-in-out
	border-radius 50%
	z-index -1
.my-icon:hover::before
	content ''
	top -0.11rem
	left -0.11rem
	width 1.8rem
	height 1.8rem
.currnt-folder
	white-space nowrap
	color $primary
	margin-left 16px
.currnt-folder i.material-icons
	font-size 30px
	transform translateY(5px)
.emailin-body
	word-wrap break-word	
.search-btn
	margin-right 32px
.my-icon2
	position relative
	cursor pointer
.my-icon2::before
	position absolute
	display block
	left 0.75rem
	top 0.75rem
	content ' '
	width 0px
	height 0px
	background-color rgba(0,0,0, 0.1)
	transition 0.2s ease-in-out
	border-radius 50%
	z-index -1
